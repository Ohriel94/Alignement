{% extends 'base.html.twig' %}
{% block stylesheets %}
	<!-- Bootstrap CSS -->
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
	<link rel="stylesheet" type="text/css" href="../css/style-general.css">
	<link rel="stylesheet" type="text/css" href="../css/style-retour-cam.css">
{% endblock %}
{% block title %}Alignement
{% endblock %}
{% block body %}
	<body>
		<article class="row">
			<main class="main">
				<h3>View</h3>
				<iframe width="1080" height="720" id="iframe" {# src="{{ asset('http://10.0.0.101/video/videoPlayer.html') }}" #} src="{{ asset('https://images.unsplash.com/photo-1480796927426-f609979314bd?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80') }}" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe>
				<canvas class="canvas" id="canvas" width="1080" height="720"></canvas>
			</main>
			<aside class="side">
				<h3>Controls</h3>
				<label for="thickness">Épaisseur :
					<span id="valueThick" class="value"></span>
					<input type="range" id="alpha" name="alpha" min="1" max="10" value="1">
				</label>
				<label for="alpha">Transparance :
					<span id="valueAlpha" class="value"></span>
					<input type="range" id="step" name="step" min="1" max="75" value="5"></label>
				<label for="step">Écart:
					<span id="valueStep" class="value"></span>
					<input type="range" id="thickness" name="thickness" min=".5" max="15" value="5">
				</label>
			</aside>
		</main>
	</body>
{% endblock %}
