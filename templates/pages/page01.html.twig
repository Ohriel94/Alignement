{% extends 'base.html.twig' %}
{% block stylesheets %}
	<!-- Bootstrap CSS -->
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
	<link rel="stylesheet" type="text/css" href="../css/style-general.css">
	<link rel="stylesheet" type="text/css" href="../css/style-retour-cam.css">
{% endblock %}
{% block title %}Alignement
{% endblock %}
{% block body %}
	<body>
		<article class="row">
			<aside class="side">
				<h3>Controls</h3>
				<label for="epaisseur">Épaisseur :
					<span id="epaisseur" class="slider"></span>
					<input type="range" id="epaisseur" name="epaisseur" min="1" max="50" value="25">
				</label>
				<label for="alpha">Transparance :
					<span id="alpha" class="slider"></span>
					<input type="range" id="alpha" name="alpha" min="1" max="100" value="50"></label>
				<label for="densite">Écart :
					<span id="densite" class="slider"></span>
					<input type="range" id="densite" name="densite" min="1" max="150" value="75">
				</label>
				<div class="side">
					<input type="button" id="btn-rouge" class="button" onclick="" value="rouge"><br>
					<input type="button" id="btn-bleu" class="button" onclick="" value="bleu"><br>
					<input type="button" id="btn-vert" class="button" onclick="" value="vert"><br>
					<input type="button" id="btn-jaune" class="button" onclick="" value="jaune"><br>
					<input type="button" id="btn-blanc" class="button" onclick="" value="blanc"><br>
				</div>
			</aside>
			<main class="main">
				<h3>View</h3>
				<canvas id="canvas" width="2304" height="1296"></canvas>
				<iframe id="iframe" title="retourCamera" width="2304" height="1296" src="10.0.1.20" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe>
			</main>
		</article>
	</body>
{% endblock %}
