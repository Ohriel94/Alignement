{% block title %}TS-03 (twig){% endblock %}
{% block body %}
<body class="bg-dark">
<nav class="navbar navbar-expand-md navbar-dark bg-info">
    <a href="/page01" class="navbar-brand">Accueil</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a href="/page02" class="nav-link active">Carousel</a>
            </li>
            <li class="nav-item">
                <a href="/page04" class="nav-link">Curriculum Vitae</a>
            </li>
        </ul>
        <div class="form-inline ml-auto">
            <a href="https://fr-ca.facebook.com/" target="_blank">
                <img src="../images/socialNetwork/facebook.png" class="img-social"
                     alt="http://via.placeholder.com/540x450"></a>
            <a href="https://www.instagram.com/?hl=fr" target="_blank">
                <img src="../images/socialNetwork/insta.png" class="img-social"
                     alt="http://via.placeholder.com/540x450"/></a>
            <a href="https://twitter.com/login?lang=fr" target="_blank">
                <img src="../images/socialNetwork/twitter.png" class="img-social"
                     alt="http://via.placeholder.com/540x450"/></a>
        </div>
    </div>
</nav>

<hr/>

<main class="calculator-grid">
    <section class="output">
        <div data-previous-operand class="previous-operand">0</div>
        <div data-current-operand class="current-operand">0</div>
    </section>
    <button data-all-clear class="span-two">AC</button>
    <button data-delete>DEL</button>
    <button data-operation>÷</button>
    <button data-number>1</button>
    <button data-number>2</button>
    <button data-number>3</button>
    <button data-operation>*</button>
    <button data-number>4</button>
    <button data-number>5</button>
    <button data-number>6</button>
    <button data-operation>+</button>
    <button data-number>7</button>
    <button data-number>8</button>
    <button data-number>9</button>
    <button data-operation>-</button>
    <button data-number>.</button>
    <button data-number>0</button>
    <button data-equals class="span-two">=</button>
</main>


<hr/>

<footer class="bg-info">
    <hr/>
    <p class="text-center">
        <a href="https://www.cegepthetford.ca/">
            <img class="logo" src="../images/LCTM.png" alt="logoCTM"/>
        </a><br>
        <a href="https://www.cegepthetford.ca/programmes/programmes-techniques/techniques-de-linformatique/"
           class="liens">
            Département des techniques de l'informatique - Cégep de Thetford Mines
        </a>
        <br/>
    </p>
    <h3 class="text-center">
        &copy; 2020
    </h3>
    <hr/>
</footer>
